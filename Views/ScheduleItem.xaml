<UserControl x:Class="ShabbatMovieLauncher.Views.ScheduleItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShabbatMovieLauncher.Views"
             mc:Ignorable="d" 
             xmlns:xceed="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid
    Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Movie's URL-->
        <TextBox
        Text="{Binding MovieUrl,FallbackValue=URL}"
        Grid.Row="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="600"
        Height="40"
        FontSize="25"/>

        <!-- Schedule DatePicker-->
        <xceed:DateTimePicker
        Height="40"
        Width="600"
        Grid.Row="1"
        FontSize="25"
        Format="FullDateTime"
        Value="{Binding ScheduledDateTime}"/>

        <!--Schedule Button-->
        <Button 
        Content="Schedule"
        Grid.Row="1"
        Grid.Column="1"
        Width="100" 
        Height="40" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Command="{Binding SetScheduleButton}"/>
    </Grid>
</UserControl>
