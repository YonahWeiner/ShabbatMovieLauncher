<mah:MetroWindow x:Class="ShabbatMovieLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShabbatMovieLauncher"
        xmlns:xceed="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:views="clr-namespace:ShabbatMovieLauncher.Views"
        mc:Ignorable="d"
        Title="Movie Scheduler" Height="200" Width="750">
    <Grid>
        <Grid
            Visibility="{Binding ScheduleItemVisibility}">
            <views:ScheduleItem/>
        </Grid>
        <Grid
            Visibility="{Binding CountDownVisibility}">
            <views:CountDown/>
        </Grid>
    </Grid>
</mah:MetroWindow>
