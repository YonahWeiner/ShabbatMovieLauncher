<mah:MetroWindow x:Class="ShabbatMovieLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShabbatMovieLauncher"
        xmlns:xceed="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:views="clr-namespace:ShabbatMovieLauncher.Views"
        mc:Ignorable="d"
        Title="Movie Scheduler" Height="200" Width="750">
    <mah:MetroWindow.DataContext>
        <local:MainWindowVM />
    </mah:MetroWindow.DataContext>
    <Grid
        Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox
            Text="{Binding MovieUrl,FallbackValue=URL}"
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="600"
            Height="40"
            FontSize="25"/>

        <!-- Schedule DatePicker-->
        <xceed:DateTimePicker
            Height="40"
            Width="600"
            Grid.Row="1"
            FontSize="25"
            Format="FullDateTime"
            Value="{Binding ScheduledDateTime}"/>
      
        <!--Launch Button-->
        <Button 
            Content="Schedule"
            Grid.Row="1"
            Grid.Column="1"
            Width="100" 
            Height="40" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Command="{Binding SetScheduleButton}"/>
    </Grid>
</mah:MetroWindow>
